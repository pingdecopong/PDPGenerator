{% extends 'pingdecopongSamplePDPGeneratorBundle:SystemUser:layout.html.twig' %}
{% form_theme form 'pingdecopongFormFreezeBundle:Form:form_layout.html.twig' %}

{% block body -%}
    <header>
        <h1>SystemUser 新規作成</h1>
    </header>
    <section class="section">
        <h1 class="caption"><span id="selectFolderName">SystemUser 新規作成</span></h1>
        <div class="functionListArea">
            <ul class="functionList clearfix">
                <li class="home"><a href="{{ path('systemuser') }}?{{ returnUrlParam|raw }}">一覧へもどる</a></li>
            </ul>
        </div>
        <form action="{{ path('systemuser_new') }}" novalidate method="post" {{ form_enctype(form) }} name="systemuser_new_form">

            {{ form_errors(form) }}

            <table width="600" border="0" cellpadding="0" cellspacing="0" class="detailTable">
                <tr>
                    <th scope="row">{{ form_label(form.SystemUser.email) }}</th>
                    <td><label>
                            {{ form_errors(form.SystemUser.email) }}
                            {{ form_widget(form.SystemUser.email) }}
                        </label></td>
                </tr>
            </table>
            <div class="submit_box">
                {% if mode == 'input' %}
                <input type="button" onclick="postConfirm()" value="確認" style="width:100px;"/>
                {% elseif mode == 'confirm' %}
                <input type="button" onclick="postBack()" value="戻る"/>
                <input type="button" onclick="postSubmit()" value="登録" style="width:100px;"/>
                {% endif %}
            </div>

            {{ form_widget(form.subform.buttonAction) }}
            {{ form_widget(form.subform.returnAddress) }}

            <input id="_button_action" type="hidden" value="" name="_button_action">
        {{ form_end(form) }}

    </section>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        //<![CDATA[
        function postConfirm(){
            document.systemuser_new_form["{{ form.subform.buttonAction.vars.full_name }}"].value = "confirm";
            document.systemuser_new_form.submit();
        }
        function postSubmit(){
            document.systemuser_new_form["{{ form.subform.buttonAction.vars.full_name }}"].value = "submit";
            document.systemuser_new_form.submit();
        }
        function postBack(){
            document.systemuser_new_form["{{ form.subform.buttonAction.vars.full_name }}"].value = "";
            document.systemuser_new_form.submit();
        }
        //]]>
    </script>
{% endblock %}
